    htmlAttributes: new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(model => model.IdGenero, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Tallas, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.DropDownListFor(model => model.IdTalla,
    (SelectList)ViewBag.Tallas,
    "Seleccione una Talla",
    htmlAttributes: new { @class = "form-control form-control-sm" })
            @Html.ValidationMessageFor(model => model.IdTalla, "", new { @class = "text-danger" })
        </div>
    </div>

    new { htmlAttributes = new { @class = "form-control form-control-sm" }, multiple = "multiple" })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Crear" class="btn btn-success" style="width:15%" />
        </div>
    </div>
</div>
    }
    </center>
        <div>
            @Html.ActionLink("Regresar", "GetCalzados")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

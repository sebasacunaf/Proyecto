@model IEnumerable<Infraestructure.Models.Calzado>

@{
    ViewBag.Title = "Calzados";
}

<section class="bg-light py-5" style="margin-top:5%">
    <center>
        <h4  style="color: #900C3F ">Calzados</h4>
        <br />
        <table class="table table-hover"  style="width:100%">
            <tr class="table-light">
                <th  scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th  scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.NombreMarca)
                </th>
                <th  scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.IdGenero)
                </th>
                <th  scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.IdTalla)
                </th>
                <th  scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="table-light">
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.NombreMarca)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IdGenero)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.IdTalla)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalle", "GetCalzadosByID", new { id = item.Id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </center>
</section>
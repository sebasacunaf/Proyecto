    </div>
</div>
      
        <center>
            <h4 style="color:#900C3F;margin-top:5%">Calzado por proveedor</h4>
            <table class="table table-hover" style="width:50%">
                <tr class="table-light">
                    <th scope="col" class="text-center">
                        Proveedor
                    </th>
                    <th scope="col" class="text-center">
                        Ubicación
                    </th>
                    <th scope="col" class="text-center">
                        País
                    </th>
                </tr>

                @foreach (var item in Model.Proveedor)
                {
                    <tr class="table-light">
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Ubicacion)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Pais)
                        </td>
                    </tr>
                }
            </table>
            <h4 style="color:#900C3F;margin-top:5%">Calzado por Sucursal</h4>
            <table class="table table-hover" style="width:50%">
                <tr class="table-light">
                    <th scope="col" class="text-center">
                        Sucursal
                    </th>
                </tr>

                @foreach (var item in Model.CalzadoxSucursal)
                {
                    <tr class="table-light">
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Sucursal.Id)
                        </td>
                    </tr>
                }
            </table>
        </center>
        <p> @Html.ActionLink("Regresar", "GetCalzados")</p>

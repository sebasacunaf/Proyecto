        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.NombreMarca)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NombreMarca)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IdGenero)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IdGenero)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IdTalla)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.IdTalla)
                </dd>

                <dt>
                   @Html.DisplayNameFor(model => model.PrecioProv)
                </dt>

                <dd>
                    ₡ @Html.DisplayFor(model => model.PrecioProv)

@model IEnumerable<Infraestructure.Models.Agente>

@{
    ViewBag.Title = "Agentes";
}


<section class="bg-light py-5" style="margin-top:10%">
    <center>
        <h3 class="h3">Calzado por reposición</h3>
        <br />
        <table class="table table-hover" style="width:100%">
            <tr class="table-light">
                <th scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.IdProveedor)
                </th>
                <th scope="col" class="text-center">
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
<tr class="table-light">
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.Telefono)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.Correo)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.IdProveedor)
    </td>
    <td class="text-center">
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td class="text-center">
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalle", "GetAgentesByID", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>            }

        </table>
    </center>
</section>